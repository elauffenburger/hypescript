{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch bin/cli",
      "program": "${workspaceFolder}/target/debug/hsc",
      "args": ["${input:args}", "-o", "./build"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run generated exe",
      "program": "${workspaceFolder}/build/bin/out",
      "args": [],
      "cwd": "${workspaceFolder}/build"
    }
  ],
  "inputs": [
    {
      "id": "args",
      "description": "args to pass to cli",
      "type": "promptString",
      "default": "./bin/tests/all-the-things.ts"
    }
  ]
}
